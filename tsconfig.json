{
  "compilerOptions": {
    "rootDir": "./src",

    "types": ["bun-types"],

    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",

    "noEmit": true,

    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

  },
  "include": ["./src"],
  "exclude": ["./_work"]
}
